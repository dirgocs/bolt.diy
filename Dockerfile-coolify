FROM node:20.18.0

WORKDIR /app

# Atualiza o Corepack para a versão mais recente, habilita o pnpm e fixa sua versão; instala o wrangler globalmente
RUN npm install -g corepack@latest && \
    corepack enable pnpm && \
    corepack use pnpm@latest-10 && \
    npm install -g wrangler

# Copiar arquivos de dependências
COPY package.json pnpm-lock.yaml ./

# Instalar dependências usando pnpm via Corepack
RUN pnpm install

# Copiar código fonte e scripts
COPY . .

# Garantir que o bindings.sh tenha permissões de execução e o formato correto
RUN tr -d '\r' < bindings.sh > bindings.tmp && \
    mv bindings.tmp bindings.sh && \
    chmod +x bindings.sh

# Build da aplicação
RUN pnpm run build

# Expor a porta da aplicação
EXPOSE 5173

# Configurar variáveis de ambiente
ENV NODE_ENV=production \
    RUNNING_IN_DOCKER=true

# Comando para iniciar a aplicação via script dockerstart
CMD ["pnpm", "run", "dockerstart"]
