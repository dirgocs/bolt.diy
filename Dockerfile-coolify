FROM node:20.18.0

WORKDIR /app

# Update npm and install essential tools
RUN npm install -g npm@latest && \
    npm install -g corepack@latest && \
    corepack enable pnpm && \
    corepack use pnpm@latest-10 && \
    npm install -g wrangler@latest

# Copy package files first
COPY package.json pnpm-lock.yaml ./

# Clean install dependencies
RUN pnpm install --no-frozen-lockfile

# Install Cloudflare dependencies
RUN pnpm add @remix-run/cloudflare && \
    pnpm remove @remix-run/node

# Copy source code and scripts
COPY . .

# Fix bindings.sh file format
RUN tr -d '\r' < bindings.sh > bindings.tmp && \
    mv bindings.tmp bindings.sh && \
    chmod +x bindings.sh

# Build application
RUN pnpm run build

# Expose application port
EXPOSE 5173

# Set environment variables
ENV NODE_ENV=production \
    RUNNING_IN_DOCKER=true

# Start application
CMD ["pnpm", "run", "dockerstart"]